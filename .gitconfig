[user]
  name = Your Name
  email = yourmail@mail.com

[init]
  templatedir = ~/.git_templates

[diff]
  tool = vimdiff

[core]
  editor = /usr/bin/vim

[alias]
  alias = "! git config --get-regexp ^alias\\. | sed -e 's/^alias\\.//' -e 's/ / = /' | sort"
  br = branch
  ci = commit
  co = checkout
  df = diff
  g = grep -I
  lg = log -p
  loq = log --graph --all --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(bold white)â€” %an%C(reset)%C(bold yellow)%d%C(reset)' --abbrev-commit --date=relative
  pb = publish-branch
  pp = !"echo 'Pull'; git pull; echo 'Push'; git push"
  rb = rbranch
  rc = rank-contributors
  rba = "rebase --abort"
  rbc = "rebase --continue"
  root = !pwd
  squash = "rebase -i --autosquash"
  rv = review
  sm = show-merges
  st = status

[color]
  ui = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[merge]
  tool = vimdiff
  conflictstyle = diff3
  prompt = false

[rerere]
  enabled = 1

[push]
  default = matching

[sendemail]
  from = YourName <email@gmail.com>
  smtpuser = email@gmail.com
  smtppass = PASSWORD
  smtpserver = smtp.gmail.com
  smtpencryption = tls
  chainreplyto = false
  smtpserverport = 587

[gitreview]
  username = gerritusername
