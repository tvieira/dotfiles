defaults
  tls on
  logfile ~/.msmtp.log
  auth off

account redhat
  host smtp.gmail.com
  port 587
  from xxx
  auth on
  user xxx
  password
  tls_starttls on
  tls_certcheck on
  tls_trust_file /etc/ssl/certs/ca-bundle.crt

